# OpenPhone API Configuration
OPENPHONE_API_KEY=OP-KEY...
OPENPHONE_FROM=+15551234567
OPENPHONE_USER_ID=USxxxx
OPENPHONE_WEBHOOK_URL=https://your-public-endpoint/webhooks/openphone
OPENPHONE_WEBHOOK_SECRET=replace-with-shared-secret

# Translation Provider (DEEPL|LIBRE|GOOGLE|OPENAI)
TRANSLATE_PROVIDER=OPENAI

# DeepL Configuration (if using DEEPL)
DEEPL_API_KEY=...

# LibreTranslate Configuration (if using LIBRE)
LIBRE_URL=https://libretranslate.com
LIBRE_API_KEY=

# Google Translate Configuration (if using GOOGLE)
GOOGLE_PROJECT_ID=...
GOOGLE_APPLICATION_CREDENTIALS=/app/creds.json

# Server Configuration
PORT=3000
ORIGIN=http://localhost:3000

# OpenPhone API Base URL
OPENPHONE_API=https://api.openphone.com/v1

# OpenAI (LLM) for per-message translation
OPENAI_API_KEY=sk-...